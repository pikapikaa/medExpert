<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tabView="clr-namespace:Syncfusion.XForms.TabView;assembly=Syncfusion.SfTabView.XForms" 
             xmlns:behaviors="clr-namespace:medExpert.Behaviors"
             xmlns:local="clr-namespace:medExpert.Renderers" xmlns:imgcrop="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.ImageCropView" xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="medExpert.Views.Tasks.TaskDetailView">

    <!--Шапка-->
    <NavigationPage.TitleView>
        <Label Margin="70,0,0,0"
               FontFamily="{StaticResource SemiBoldFont}"
               FontSize="20"
               Text="Задача №134"
               TextColor="Black"
               VerticalOptions="Center"/>
    </NavigationPage.TitleView>
    
    <ContentPage.Content>
        <tabView:SfTabView  VisibleHeaderCount="2">

            <!-- Вкладка "Обеспечить" -->
            <tabView:SfTabItem Title="Обеспечить" 
                               TitleFontSize="18">
                <tabView:SfTabItem.Content>

                    <ScrollView Padding="20">
                        
                        <StackLayout>

                            <!-- Задача -->
                            <Label Margin="10,0,0,0" 
                                   Text="Задача" 
                                   Style="{StaticResource GrayText}" />
                            <Frame BackgroundColor="#F2F2F2" 
                                   CornerRadius="6" 
                                   HasShadow="False" 
                                   Margin="0"
                                   Padding="0">
                                <StackLayout>
                                    <local:CustomEditorRenderer Text="Проверка №4 , с 07.05.2020 до 17.05.2020, ВА ул. Ясная"
                                                                VerticalOptions="FillAndExpand"
                                                                HorizontalOptions="FillAndExpand"
                                                                AutoSize="TextChanges"
                                                                Style="{StaticResource NormalText}"/>
                                </StackLayout>
                            </Frame>

                            <!-- Описание задачи -->
                            <Label Margin="10,10,0,0" 
                                   Text="Описание задачи" 
                                   Style="{StaticResource GrayText}" />
                            <Frame BackgroundColor="#F2F2F2" 
                                   CornerRadius="6"
                                   Margin="0"
                                   Padding="0"
                                   HasShadow="False">
                                <StackLayout>
                                    <local:CustomEditorRenderer Text="Проверить наличие необходимых препаратов по требованию государственных стандартов"
                                                                VerticalOptions="FillAndExpand"
                                                                HorizontalOptions="FillAndExpand"
                                                                AutoSize="TextChanges"
                                                                Style="{StaticResource NormalText}"/>
                                </StackLayout>
                            </Frame>

                            <!-- Исполнитель -->
                            <Label Margin="10,10,0,0" 
                                   Text="Исполнитель" 
                                   Style="{StaticResource GrayText}" />
                            <Frame BackgroundColor="#F2F2F2" 
                                   CornerRadius="6"
                                   Margin="0"
                                   Padding="10"
                                   HasShadow="False">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Text="Баиров Баир Баирович"
                                           Style="{StaticResource Text}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Start"/>

                                    <Image Grid.Column="1" 
                                           Source="dropdown" 
                                           WidthRequest="10" 
                                           HeightRequest="10"/>
                                </Grid>
                            </Frame>

                            <!-- Срок -->
                            <Label Margin="10,10,0,0" 
                                   Text="Срок" 
                                   Style="{StaticResource GrayText}" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Frame BackgroundColor="#F2F2F2" 
                                       CornerRadius="6"
                                       Margin="0"
                                       Padding="10"
                                       HasShadow="False">
                                    <Label Text="23.09.2020"
                                           Style="{StaticResource Text}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Start"/>
                                </Frame>
                            </Grid>

                            <!-- Напоминание -->
                            <Label Margin="10,10,0,0" 
                                   Text="Напоминание" 
                                   Style="{StaticResource GrayText}" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Frame BackgroundColor="#F2F2F2" 
                                       CornerRadius="6"
                                       Margin="0"
                                       Padding="10"
                                       HasShadow="False">
                                    <Label Text="23.09.2020"
                                           Style="{StaticResource Text}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Start"/>
                                </Frame>

                                <Frame Grid.Column="1"
                                       BackgroundColor="#F2F2F2" 
                                       CornerRadius="6"
                                       Margin="0"
                                       Padding="10"
                                       HasShadow="False">
                                    <Label Text="09:00"
                                           Style="{StaticResource Text}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Start"/>
                                </Frame>
                            </Grid>

                            <!-- Приоритет -->
                            <Label Margin="10,10,0,0" 
                                   Text="Приоритет" 
                                   Style="{StaticResource GrayText}" />
                            <Frame BackgroundColor="#F2F2F2" 
                                   CornerRadius="6"
                                   Margin="0"
                                   Padding="10"
                                   HasShadow="False">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Text="Низкий"
                                           Style="{StaticResource Text}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Start"/>

                                    <Image Grid.Column="1" 
                                           Source="dropdown" 
                                           WidthRequest="10" 
                                           HeightRequest="10"/>
                                </Grid>
                            </Frame>

                            <!-- Повтор задачи -->
                            <Label Margin="10,10,0,0" 
                                   Text="Повтор задачи" 
                                   Style="{StaticResource GrayText}" />
                            <Frame BackgroundColor="#F2F2F2" 
                                   CornerRadius="6"
                                   Margin="0,0,0,5"
                                   Padding="10"
                                   HasShadow="False">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Text="Ежедневно"
                                           Style="{StaticResource Text}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Start"/>

                                    <Image Grid.Column="1" 
                                           Source="dropdown" 
                                           WidthRequest="10" 
                                           HeightRequest="10"/>
                                </Grid>
                            </Frame>

                            <!-- Изображения -->
                            <Grid Padding="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <imgcrop:ImageCropView x:Name="cropView1">
                                    <Frame BackgroundColor="Transparent"
                                           BorderColor="#3960E2"
                                           HasShadow="False"
                                           CornerRadius="10">
                                        <!--<Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={x:Reference checkListDetailPage},
                                                                Path=BindingContext.ShowMediaMenuCommand}" />
                                        </Frame.GestureRecognizers>-->
                                        <Image Source="image_download" 
                                               VerticalOptions="Center"
                                               Aspect="AspectFit"/>
                                    </Frame>
                                </imgcrop:ImageCropView>


                                <imgcrop:ImageCropView x:Name="cropView2"
                                                       Grid.Column="1" 
                                                       Source="https://upload.wikimedia.org/wikipedia/commons/thumb/f/fc/Papio_anubis_%28Serengeti%2C_2009%29.jpg/200px-Papio_anubis_%28Serengeti%2C_2009%29.jpg" >
                                    <imgcrop:ImageCropView.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding OpenPhotoCommand}"
                                                              CommandParameter="0" />
                                    </imgcrop:ImageCropView.GestureRecognizers>
                                </imgcrop:ImageCropView>



                                <imgcrop:ImageCropView x:Name="cropView3" 
                                                       Grid.Column="2" 
                                                       Source="https://upload.wikimedia.org/wikipedia/commons/thumb/f/fc/Papio_anubis_%28Serengeti%2C_2009%29.jpg/200px-Papio_anubis_%28Serengeti%2C_2009%29.jpg" >
                                    <imgcrop:ImageCropView.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding OpenPhotoCommand}"
                                                              CommandParameter="1" />
                                    </imgcrop:ImageCropView.GestureRecognizers>
                                </imgcrop:ImageCropView>

                                <imgcrop:ImageCropView x:Name="cropView4" 
                                                       Grid.Column="3" 
                                                       Opacity="0.4"
                                                       Source="https://upload.wikimedia.org/wikipedia/commons/thumb/f/fc/Papio_anubis_%28Serengeti%2C_2009%29.jpg/200px-Papio_anubis_%28Serengeti%2C_2009%29.jpg" >
                                    <imgcrop:ImageCropView.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding OpenPhotoCommand}"
                                                              CommandParameter="2" />
                                    </imgcrop:ImageCropView.GestureRecognizers>
                                </imgcrop:ImageCropView>

                                <Label HorizontalOptions="Center" 
                                       Text="+78" 
                                       VerticalOptions="Center" 
                                       Grid.Column="3" 
                                       FontAttributes="Bold" 
                                       FontSize="Large"
                                       TextColor="Black">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding OpenPhotoCommand}"
                                                              CommandParameter="2" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>

                            <!-- Кнопка -->
                            <Frame HorizontalOptions="Center"
                                   VerticalOptions="EndAndExpand"
                                   BackgroundColor="#3960E2"
                                   Padding="10"
                                   CornerRadius="5"
                                   Margin="0,10,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Label Text="Начать выполнение"
                                           Style="{StaticResource TitleWhite}"
                                           VerticalOptions="Center" HorizontalOptions="Center"/>
                                </Grid>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding AddAuditRecordCommand}"/>
                                </Frame.GestureRecognizers>
                            </Frame>

                        </StackLayout>
                    </ScrollView>
                    
                </tabView:SfTabItem.Content>
            </tabView:SfTabItem>

            <!-- Вкладка "История" -->
            <tabView:SfTabItem Title="История" 
                               TitleFontSize="18">
                <tabView:SfTabItem.Content>
                    <Label Text="dfdddf"/>
                </tabView:SfTabItem.Content>
            </tabView:SfTabItem>
            
        </tabView:SfTabView>
    </ContentPage.Content>
</ContentPage>